<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MysticPartyTracker.Views.CharacterView"
             Title="Ficha de Personagens">
    <VerticalStackLayout Spacing="10" Margin="30">
        <FlexLayout JustifyContent="SpaceBetween">
            <VerticalStackLayout FlexLayout.Grow="1" Padding="0, 20, 0, 0">
                <Label 
                    Text="Nome do Personagem"
                    />
                <Entry
                    Placeholder="Ex: Arthur"
                    />
            </VerticalStackLayout>
            <VerticalStackLayout>
                <Label
                    Text="Nível"
                    />
                <Entry 
                    Placeholder="Ex: 17"
                    />
            </VerticalStackLayout>
        </FlexLayout>


        <Label 
            Text="Classe do Personagem"
            />

        <Entry 
            Placeholder="Ex: Lutador"
            />

        <Label 
            Text="Raça do Personagem"
            />

        <Entry 
            Placeholder="Ex: Humano"
            />

        <Button 
            Text="Adicionar"
            HorizontalOptions="CenterAndExpand"
            />

        <Label Padding="40" HorizontalOptions="Center"
            Text="-"/>
    </VerticalStackLayout>
</ContentPage>